{
  "appId": "com.documentresearch.app",
  "productName": "Document Research",
  "directories": {
    "buildResources": "build",
    "output": "dist"
  },
  "files": [
    "out/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "python-service",
      "to": "python-service",
      "filter": ["**/*", "!**/__pycache__", "!**/*.pyc", "!**/.pytest_cache", "!**/.mypy_cache"]
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64", "x64"]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "category": "Office"
  }
}
